{
  "token_hmac_secret_key": "my-secret-key-change-in-production",
  "admin": true,
  "admin_password": "admin",
  "admin_secret": "admin-secret",
  "api_key": "my-api-key",
  "allowed_origins": ["http://localhost:3000", "http://localhost:5173"],
  "log_level": "debug",

  "proxy_connect_endpoint": "http://localhost:3001/centrifugo/connect",
  "proxy_connect_timeout": "3s",

  "proxy_subscribe_endpoint": "http://localhost:3001/centrifugo/subscribe",
  "proxy_subscribe_timeout": "3s",

  "proxy_publish_endpoint": "http://localhost:3001/centrifugo/publish",
  "proxy_publish_timeout": "3s",

  "namespaces": [
    {
      "name": "chat",
      "presence": true,
      "join_leave": true,
      "force_push_join_leave": true,
      "history_size": 100,
      "history_ttl": "300s",
      "force_recovery": true,
      "allow_subscribe_for_client": true,
      "allow_publish_for_subscriber": true,
      "allow_presence_for_subscriber": true,
      "allow_history_for_subscriber": true,
      "proxy_subscribe": true,
      "proxy_publish": true
    }
  ]
}
