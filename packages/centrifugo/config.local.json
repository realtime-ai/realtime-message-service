{
  "port": 8000,
  "admin": true,
  "admin_password": "admin",
  "admin_secret": "admin-secret",
  "log_level": "debug",
  "allowed_origins": ["*"],
  "proxy_connect_endpoint": "http://localhost:8787/centrifugo/connect",
  "proxy_subscribe_endpoint": "http://localhost:8787/centrifugo/subscribe",
  "proxy_publish_endpoint": "http://localhost:8787/centrifugo/publish",
  "proxy_connect_timeout": "5s",
  "proxy_subscribe_timeout": "5s",
  "proxy_publish_timeout": "5s",
  "namespaces": [
    {
      "name": "chat",
      "presence": true,
      "join_leave": true,
      "history_size": 100,
      "history_ttl": "60s",
      "force_recovery": false,
      "proxy_subscribe": true,
      "proxy_publish": true
    }
  ],
  "health": true
}
