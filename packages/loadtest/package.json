{
  "name": "@centrifuge-realtime-message/loadtest",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "loadtest": "tsx src/index.ts",
    "loadtest:help": "tsx src/index.ts --help",
    "loadtest:quick": "tsx src/index.ts -c 10 -u 2 -d 10",
    "loadtest:full": "tsx src/index.ts -c 100 -u 2 -d 60",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "centrifuge": "^5.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.12",
    "tsx": "^4.19.2",
    "typescript": "^5.3.2"
  }
}
